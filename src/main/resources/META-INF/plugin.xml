<idea-plugin>
    <id>com.satotats.gradle-custom-plugin-jumper</id>
    <name>Gradle Custom Plugins Jumper</name>
    <vendor email="contact.satotats@gmail.com" url="https://github.com/satotats">sato_tats</vendor>

    <description><![CDATA[
    To enable jump to definition file of plugins you made...
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.groovy</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor language="Groovy"
                                  implementation="com.satotats.CustomGradlePluginContributor"
                                  order="first"/>
        <psi.referenceContributor language="kotlin"
                                  implementation="com.satotats.CustomGradlePluginContributor"
                                  order="first"/>

        <psi.symbolReferenceProvider hostLanguage="Groovy"
                                     hostElementClass="org.jetbrains.plugins.groovy.lang.psi.api.statements.expressions.literals.GrLiteral"
                                     targetClass="com.satotats.GradlePluginSymbol"
                                     implementationClass="com.satotats.GradleCustomPluginReferenceProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.satotats.ClickAction" class="com.satotats.ClickAction" text="ClickAction">
            <override-text place="MainMenu" text="Clock Action"/>
            <add-to-group group-id="StructureViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>